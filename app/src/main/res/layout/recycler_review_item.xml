<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/mp_400"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fadingEdge="vertical"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/mp_800">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/mp_400"
        android:padding="8dp">
        <ImageView
            android:id="@+id/img_event"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/mp_red"
            android:src="@drawable/profile02"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/mp_400"
            android:layout_toRightOf="@+id/img_event"
            android:layout_marginLeft="4dp"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_evtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ems="15"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/mp_800"
                android:text="@string/item_title"
                android:fontFamily="@font/mclassic"/>
            <TextView
                android:id="@+id/tv_place_eval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="normal"
                android:background="@color/mp_600"
                android:textColor="@color/mp_800"
                android:text="장소평가"
                android:fontFamily="@font/mclassic"/>
            <TextView
                android:id="@+id/tv_place_eval2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/mp_800"
                android:text="좋음"
                android:fontFamily="@font/mclassic"/>
            <TextView
                android:id="@+id/tv_equip_eval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="normal"
                android:background="@color/mp_600"
                android:textColor="@color/mp_800"
                android:text="시설평가"
                android:fontFamily="@font/mclassic"/>
            <TextView
                android:id="@+id/tv_equip_eval2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/mp_800"
                android:text="좋음"
                android:fontFamily="@font/mclassic"/>
            <TextView
                android:id="@+id/tv_cont_eval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="normal"
                android:background="@color/mp_600"
                android:textColor="@color/mp_800"
                android:text="내용평가"
                android:fontFamily="@font/mclassic"/>
            <TextView
                android:id="@+id/tv_cont_eval2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mp_800"
                android:text="좋음"
                android:fontFamily="@font/mclassic"
                />
            <TextView
                android:id="@+id/tv_longreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="normal"
                android:background="@color/mp_600"
                android:textColor="@color/mp_800"
                android:text="긴리뷰"
                android:fontFamily="@font/mclassic"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>