<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MP01SeoulCulture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mp_600</item>
        <item name="colorPrimaryVariant">@color/mp_800</item>
        <item name="colorOnPrimary">@color/mp_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mp_400</item>
        <item name="colorSecondaryVariant">@color/mp_600</item>
        <item name="colorOnSecondary">@color/mp_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mp_400</item>
        <item name="colorPrimaryDark">@color/mp_600</item>
        <item name="colorAccent">@color/mp_red</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/mclassic</item>
    </style>
    <style name="Widget.NavigationView" parent="Widget.Design.NavigationView">
        <item name="fontFamily">@font/mclassic</item>
        <item name="background">@color/mp_600</item>
    </style>
</resources>